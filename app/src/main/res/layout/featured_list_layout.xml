<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_margin"
    android:background="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/photo"
            android:src="@drawable/empty_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:transitionName="featured_photo"
            android:scaleType="fitXY"/>
        <!--LinearLayout
            android:id="@+id/photo_holder"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <WebView
                android:id="@+id/photo"
                android:transitionName="featured_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </LinearLayout-->

        <LinearLayout
            android:id="@+id/linear_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photo"
            android:weightSum="4"
            android:gravity="center">
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ListTitle"/>
            <TextView
                android:id="@+id/sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/ListSubTitle"/>
        </LinearLayout>
        <View style="@style/Divider" android:id="@+id/divider" android:layout_below="@+id/linear_layout" />
        <LinearLayout
            android:id="@+id/option_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:weightSum="4"
            android:gravity="center">
            <Button
                android:id="@+id/call"
                android:text="@string/call"
                android:drawableTop="@drawable/ic_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ListButton" />
            <Button
                android:id="@+id/more"
                android:text="@string/more_info"
                android:drawableTop="@drawable/ic_info_outline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ListButton" />
            <Button
                android:id="@+id/book"
                android:text="@string/book_now"
                android:drawableTop="@drawable/ic_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ListButton"/>
            <Button
                android:id="@+id/share"
                android:text="@string/share"
                android:drawableTop="@drawable/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ListButton" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>